<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2c3e50"
    tools:context="net.gulernet.app.ipadresim.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ecf0f1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="İP ADRESİM:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/ipyazi"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp" />

            <TextView
                android:text="Yükleniyor..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ip"
                android:textColor="#2c3e50"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/ipyazi" />

            <Button
                android:text="Yenile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yenile"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>




        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="#ecf0f1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="ÜLKE:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/ulkeyazi"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp" />

            <TextView
                android:text="Yükleniyor..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ulke"
                android:textColor="#2c3e50"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/ulkeyazi" />

        </RelativeLayout>




        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:background="#ecf0f1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="ÜLKE KODU:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/ulkekoduyazi"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp" />

            <TextView
                android:text="Yükleniyor..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ulkekodu"
                android:textColor="#2c3e50"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/ulkekoduyazi" />

        </RelativeLayout>




        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="180dp"
            android:background="#ecf0f1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="SERVİS SAĞLAYICISI:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/saglayiciyazi"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp" />

            <TextView
                android:text="Yükleniyor..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/saglayici"
                android:textColor="#2c3e50"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/saglayiciyazi" />

        </RelativeLayout>




        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="240dp"
            android:background="#ecf0f1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="SERVİS SAĞLAYICI KODU:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/saglayicikoduyazi"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp" />

            <TextView
                android:text="Yükleniyor..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/saglayicikodu"
                android:textColor="#2c3e50"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/saglayicikoduyazi" />

        </RelativeLayout>

    </RelativeLayout>



    </ScrollView>


</RelativeLayout>
